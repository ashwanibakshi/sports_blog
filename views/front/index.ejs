<%-include('../frontlayout/header')-%>

<%if(data!=null){%>
<section id="mainContent">
    <div class="content_bottom">
      <div class="col-lg-8 col-md-8">
        <div class="content_bottom_left">
          <div class="single_category wow fadeInDown">
            <div class="archive_style_1">
              <h2> <span class="bold_line"><span></span></span> <span class="solid_line"></span> <span class="title_text"><%=indextitle%></span> </h2>
               <%if(data){%>
              <%for(var a=0;a < data.length;a++){%>
              <div class="business_category_left wow fadeInDown">
                <ul class="fashion_catgnav">
                  <li>
                    <%if(data[a].category!="videos"){%>
                      <div class="catgimg2_container"> <a href="#"><img alt="" src="<%=data[a].image%>"></a> </div>
                    <%}else{%>
                      <div class=""> <a href="#"><video src="<%=data[a].image%>" controls style="width: 100%;height:100%;" controlsList="nodownload"></video></a> </div>
                    <%}%>
                    <h2 class="catg_titile"><a href="/blog/<%=data[a].slug%>"><%=data[a].title.toString().substring(0,100)%>...</a></h2>
                    <div class="comments_box"> <span class="meta_date"><%=data[a].createdat.toLocaleDateString()%></span> <span class="meta_comment"><a href="/blog/category/<%=data[a].category%>/?page=1"><%=data[a].category%></a></span> <span class="meta_more"><a href="/blog/<%=data[a].slug%>">Read More...</a></span> </div>
                  </li>
                </ul>
              </div>
              <%}%>
              <%}%>
            </div>
          </div>
        </div>
        <!-- <div class="pagination_area">
          <nav>
            <ul class="pagination">
              <li><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
            </ul>
          </nav>
        </div> -->
        <%if(pages){%>
          <div class="pagination_area">
           <nav>
              <% if (pages > 0) { %>
              <ul class="pagination">
                <% if (current == 1) { %>
                  <li class="page-item disabled"><a class="page-link">First</a></li>
              <% } else { %>
                  <li><a class="page-link" href="/blog/index/?page=1">First</a></li>
              <% } %>
              <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
              <% if (i !== 1) { %>
                  <li class="page-item disabled"><a>...</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                  <% if (i == current) { %>
                      <li class="page-item active"><a class="page-link"><%= i %></a></li>
                  <% } else { %>
                      <li><a class="page-link" href="/blog/index/?page=<%= i %>"><%= i %></a></li>
                  <% } %>
                  <% if (i == Number(current) + 4 && i < pages) { %>
                      <li class="page-item disabled"><a class="page-link">...</a></li>
                  <% } %>
              <% } %>
              <% if (current == pages) { %>
                  <li class="page-item disabled"><a class="page-link">Last</a></li>
              <% } else { %>
                  <li><a class="page-link" href="/blog/index/?page=<%= pages %>">Last</a></li>
              <% } %>
              </ul>
              <% } %>
            </nav>
            </div>
            <%}%>
      </div>
      
     <%-include('../frontlayout/side')-%>
    </div>
  </section>
<%}%>
  <%-include('../frontlayout/footer')-%>